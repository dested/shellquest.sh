{
  "compilerOptions": {
    "allowJs": true,
    "alwaysStrict": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "checkJs": true,
    "declaration": true,
    "declarationMap": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "incremental": true,
    "jsx": "react-jsxdev",
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "strict": true,
    "outDir": "dist",
    "module": "ESNext",
    "moduleResolution": "Node",
    "skipLibCheck": true,
    "sourceMap": true,
    "target": "ES2017",
    "resolveJsonModule": true,
    "moduleDetection": "force",
    "isolatedModules": true,
    "noUncheckedIndexedAccess": false,
    "noEmit": true,
    "paths": {
      "@/*": ["./src/*"],
      "@client/*": ["./src/*"],
      "@server/*": ["./server/*"]
    }
  },
  "include": [
    "src/**/*",
    "types/*",
    "node_modules/vite/types/*",
    "server/apiRouter.ts",
    "./server/types/prismaJson.d.ts"
  ],
  "exclude": ["node_modules", "dist"],
  "ts-node": {
    "transpileOnly": true,
    "compilerOptions": {
      "module": "CommonJS"
    }
  }
}
